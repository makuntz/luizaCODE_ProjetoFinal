###
# (PING) Verificar aplicação web
GET {{url}}

###
# URL base para a api de produtos
@apiProduto={{url}}/api/products

###
# Cadastra/salva um novo produto
POST {{apiProduto}}

{
    "code": 2,
    "name": "Blusa de gola v ",
    "size": "M",
    "description": "Blusa de gola v 10% Poliester e 90% algodão",
    "price": 50.00,
    "image": "",
    "type": "blusa",
    "category": "feminina",
    "trademark": "Marisa",
    "color": "branca"   
}
###
#Buscando produtos
GET {{apiProduto}}
content-type: application/json

###
#Buscando produto por id
GET {{apiProduto}}/6344888b165baba19a0f01e4/
content-type: application/json

###
#Buscando produto pelo nome
GET {{apiProduto}}/name/gola
content-type: application/json

###
#Deletando produto por id
DELETE  {{apiProduto}}/6344873b918713b75de27029/
content-type: application/json

###
# Atualizar todos os dados do produto pelo id
PUT  {{apiProduto}}/6344888b165baba19a0f01e4

{
    "name": "Saia"
}

